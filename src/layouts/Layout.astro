---


import '@fontsource-variable/onest';


interface Props {
	title: string;
	description: string
}

const { description,title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		  <!-- Metadatos para redes sociales -->
  		<meta property="og:title" content="Portafolio de Abel Zverev - Administrador de Sistemas" />
  		<meta property="og:description" content="Estudiante de ASIX con experiencia en administración de sistemas informáticos. Busca prácticas en Barcelona. Conoce mis proyectos y habilidades." />
  		<meta property="og:image" content="path/to/AbelLogo.png" />
  		<meta property="og:url" content="https://abelflix.es" />
  		<meta name="twitter:card" content="summary_large_image" />

  <!-- JSON-LD para esquema de datos estructurados -->
  		<script type="application/ld+json">
  			{
    			"@context": "http://schema.org",
    			"@type": "Person",
    			"name": "Abel Zverev",
    			"jobTitle": "Estudiante de ASIX",
    			"url": "https://abelflix.es",
    			"sameAs": [
      				"https://www.linkedin.com/in/abel-zverev-b22784253/",
      				"https://github.com/Abelatoxz"
    			]
  			}
  		</script>
		
	</head>
	<body class="bg-neutral-950 " >
<div class="absolute top-0 z-[-2] h-full w-[1200px] lg:w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>

		<slot />
	</body>
</html>

<style is:global>
	:root {
		
		color-scheme: light dark;
	}
	html {
			  font-family: 'Onest Variable';
			
		
	}
	body{
		flex-direction: column;
		display: flex;
		align-items: center;
	}
</style>
